{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext", "dom", "webworker"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@apis/*": ["./src/apis/*"],
      "@components/*": ["./src/components/*"],
      "@config/*": ["./src/config/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@images/*": ["./src/images/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@stores/*": ["./src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@views/*": ["./src/views/*"]
    },
    "types": ["vite/client"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*", "typings/*", "vite.config.ts"]
}
